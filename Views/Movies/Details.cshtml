@model Movie

@{ 
    ViewData["title"] = Model.Title;

}

<div class="row my-5 justify-content-between">
    <div class="col-md-3">
        <img src="data:image\/*;base64,@(Convert.ToBase64String(Model.Poster))" alt="Poster @Model.Title" class="img-thumbnail" />
    </div>
    <div class="col-md-8">
        <div class="d-flex justify-content-between mb-2">
            <h2>@Model.Title</h2>
            <span class="h3">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted mt-2" >@Model.Rate.ToString("0.0")</span>
            </span>
        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>
        <span class="text-muted">
            <i class="bi bi-film"></i>
            @Model.Genre.Name
        </span>
        <p class="text-justify mt-3">@Model.StoryLine</p>
        
    </div>
</div>